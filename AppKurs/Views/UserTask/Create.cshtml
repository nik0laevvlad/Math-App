@using Microsoft.AspNetCore.Mvc.Localization
@model UserTask
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create Task";
}

<div class="col-md-7">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>@Localizer["Title"]</label>
            <input class="form-control" asp-for="TaskTitle" />
        </div>
        <div class="form-group">
            <label>@Localizer["Subject"]</label>
            <select class="form-control" asp-for="TaskTopic" aria-label="Default select example">
                <option selected>@Localizer["Algebra"]</option>
                <option value="Geometry">@Localizer["Geometry"]</option>
                <option value="Programming">@Localizer["Programming"]</option>
            </select>
        </div>
        <div class="form-group">
            <label>@Localizer["Text"]</label>
            <textarea type="text" class="form-control" asp-for="TaskText"></textarea>
        </div>
        <div class="form-group">
            <label>@Localizer["Image File"]</label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>@Localizer["Answer"]</label>
            <input class="form-control" asp-for="TaskAnswer" />
        </div>
        <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
    </form>
</div>